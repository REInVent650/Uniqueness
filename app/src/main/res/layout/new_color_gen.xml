<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear33"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#9E9E9E"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/pal"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:padding="8dp"
			android:background="@android:color/transparent"
			android:orientation="horizontal"
			android:translationX="70.0dp"
			android:translationY="-20.0dp"/>
		<LinearLayout
			android:id="@+id/pal2"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:layout_marginBottom="8dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:translationX="-50.0dp"
			android:translationY="70.0dp"/>
		<ImageView
			android:id="@+id/imageview5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/ic_fullscreen_exit_black"
			android:scaleType="fitCenter"
			android:translationX="-50.0dp"
			android:layout_gravity="top"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="8dp"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Colour Generator"
			android:textSize="16sp"
			android:textColor="#795548"
			android:layout_gravity="center_horizontal"/>
		<LinearLayout
			android:id="@+id/toolbar_sep"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#EEEEEE"
			android:orientation="horizontal"/>
	</LinearLayout>
	<ScrollView
		android:id="@+id/vscroll2"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear25"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal"/>
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="22dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:text="Preferences"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="#2196F3"/>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="18dp"
				android:paddingTop="4dp"
				android:paddingRight="18dp"
				android:paddingBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/textview16"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="1dp"
						android:text="Use old interface"
						android:textSize="16sp"
						android:textColor="#1976D2"/>
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="1dp"
						android:paddingRight="4dp"
						android:paddingBottom="4dp"
						android:text="generate colors with the earlier design"
						android:textSize="12sp"
						android:textColor="#9E9E9E"/>
				</LinearLayout>
				<ImageView
					android:id="@+id/imageview2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/icons"
					android:scaleType="center"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear28"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="16dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal"/>
			<LinearLayout
				android:id="@+id/linear12"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear13"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/textview9"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="1dp"
						android:text="Red"
						android:textSize="16sp"
						android:textColor="#F44336"/>
					<TextView
						android:id="@+id/textview8"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="1dp"
						android:paddingRight="4dp"
						android:paddingBottom="4dp"
						android:text="let's red spice your color up"
						android:textSize="12sp"
						android:textColor="#9E9E9E"/>
				</LinearLayout>
				<Switch
					android:id="@+id/red"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:gravity="left|center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:checked="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="16dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal"/>
			<LinearLayout
				android:id="@+id/linear14"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear15"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/textview10"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="1dp"
						android:text="Blue"
						android:textSize="16sp"
						android:textColor="#2196F3"/>
					<TextView
						android:id="@+id/textview11"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="1dp"
						android:paddingRight="4dp"
						android:paddingBottom="4dp"
						android:text="make your color peaceful as blue"
						android:textSize="12sp"
						android:textColor="#9E9E9E"/>
				</LinearLayout>
				<Switch
					android:id="@+id/blue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:gravity="left|center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:checked="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear17"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="16dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal"/>
			<LinearLayout
				android:id="@+id/linear19"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear20"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/textview12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="1dp"
						android:text="Green"
						android:textSize="16sp"
						android:textColor="#4CAF50"/>
					<TextView
						android:id="@+id/textview13"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="1dp"
						android:paddingRight="4dp"
						android:paddingBottom="4dp"
						android:text="allow the nature of green mix with your color"
						android:textSize="12sp"
						android:textColor="#9E9E9E"/>
				</LinearLayout>
				<Switch
					android:id="@+id/green"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:gravity="left|center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:checked="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear21"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="16dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal"/>
			<LinearLayout
				android:id="@+id/linear22"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear23"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/textview14"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="1dp"
						android:text="Alpha"
						android:textSize="16sp"
						android:textColor="#212121"/>
					<TextView
						android:id="@+id/textview15"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingTop="1dp"
						android:paddingRight="4dp"
						android:paddingBottom="4dp"
						android:text="use alpha to lighten up your color"
						android:textSize="12sp"
						android:textColor="#9E9E9E"/>
				</LinearLayout>
				<Switch
					android:id="@+id/alpha"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:gravity="left|center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear24"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear29"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:layout_marginTop="15dp"
					android:padding="8dp"
					android:background="#9E9E9E"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/palette"
						android:layout_width="150dp"
						android:layout_height="150dp"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:orientation="horizontal"
						android:translationX="50.0dp"
						android:translationY="-20.0dp"/>
					<LinearLayout
						android:id="@+id/palette2"
						android:layout_width="150dp"
						android:layout_height="150dp"
						android:layout_marginBottom="8dp"
						android:padding="8dp"
						android:orientation="horizontal"
						android:translationX="-50.0dp"
						android:translationY="30.0dp"/>
					<ImageView
						android:id="@+id/imageview3"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/ic_fullscreen_black"
						android:scaleType="fitCenter"
						android:translationX="-20.0dp"
						android:layout_gravity="top"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/textinputlayout1"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginTop="15dp"
					android:orientation="horizontal">
					<EditText
						android:id="@+id/edittext1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Edit Text"
						android:textColorHint="#607D8B"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/textinputlayout2"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<EditText
						android:id="@+id/edittext2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Edit Text"
						android:textColorHint="#607D8B"/>
				</LinearLayout>
				<Button
					android:id="@+id/button1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:background="#2196F3"
					android:text="Generate Color"
					android:textSize="16sp"
					android:textColor="#000000"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
